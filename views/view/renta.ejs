<div class="container__renta">
    <div class="renta-total-container">
        <span class="renta-total-title">Total a pagar</span>
        <span class="renta-total"><%- totalRentas.valor + " " + totalRentas.nombre %></span>
    </div>
    <div class="renta-table-container">
        <div class="renta-table-head">
            <span class="renta-span">Nombre</span>
            <span class="renta-span">Modelo</span>
            <span class="renta-span">CÃ³digo</span>
            <span class="renta-span">Fecha</span>
            <span class="renta-span">Hora</span>
            <span class="renta-span">Consumo</span>
        </div>
        <div class="renta-table-body">
            <% if (rentas) { %>
            <% rentas.forEach(element => { %>
            <div class="renta-table-row">
                <span class="renta-span"><%= element.marca %></span>
                <span class="renta-span"><%= element.modelo %></span>
                <span class="renta-span"><%= element.codigo_minadora %></span>
                <% let array = element.fecha.toString().split(" "); %>
                <% let newArray = []; %>
                <% for (let i = 0; i < 3; i++) {newArray.push(array[i+1]); } %>
                <% let date = newArray.join("-"); %>
                <span class="renta-span"><%= date %></span>
                <span class="renta-span"><%= element.hora %></span>
                <span class="renta-span"><%- element.consumo_acumulado + " KWh"%></span>
            </div>
            <% }); %>
            <% } %>
        </div>
    </div>
</div>